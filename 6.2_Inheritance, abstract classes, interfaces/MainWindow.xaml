<Window x:Class="_6._2_3_Inheritance__abstract_classes__interfaces.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6._2_3_Inheritance__abstract_classes__interfaces"
        mc:Ignorable="d"
        Title="Считывание данных из файла" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="1.0*"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonRead" Content="Считать данные из файла" Click="Button_Click" Grid.Row="0"/>
        <TextBox x:Name="textBoxReadData" TextWrapping="Wrap" Grid.Row="1" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>
